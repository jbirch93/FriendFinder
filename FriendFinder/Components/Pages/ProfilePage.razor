@page "/profile/{UserName}"

<PageTitle>Profile</PageTitle>

<div class="profile-grid">
    <!-- Top row (full width) -->
    <div class="profile-header">
        <h2>@UserName</h2>
        <p>@Bio</p>
    </div>

    <!-- Below: 3-column tiles -->
    <div class="cat-tile">Posts</div>
    <div class="cat-tile">Friends</div>
    <div class="cat-tile">Messages</div>
    <div class="cat-tile">Photos</div>
    <div class="cat-tile">Settings</div>
    <div class="cat-tile">Activity</div>
</div>

@code {
    [Parameter] public string? UserName { get; set; }
    private string Bio = "Developer • Coffee enthusiast • Building FriendFinder 🚀";
}