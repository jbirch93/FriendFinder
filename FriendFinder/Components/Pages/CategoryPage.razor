@page "/category/{cat}"

<PageTitle>@cat</PageTitle>

<div class="cat-grid">
    @foreach (var sc in subcats)
    {
        <a href="@($"/subcategory/{sc}")" class="cat-tile">@sc</a>
    }
</div>

@code {
    [Parameter] 
    public string? cat { get; set; }
    
    private readonly string[] subcats = new[]
    {
        "Sandwiches","Burgers","Salads","Pizza","Candy","Dessert","Appetizers","Steaks","Fruit",
        "Chinese","Thai","Indian","Korean","Mexican","Breakfast","","","Soups"
    };
}